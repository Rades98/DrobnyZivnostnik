<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="DrobnyZivnostnik.Views.MasterMenuView"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:behaviors="clr-namespace:Behaviors;assembly=Behaviors"
             xmlns:localizedControls="clr-namespace:AxiosControls.LocalizedControls;assembly=AxiosControls"
             xmlns:masterPage="clr-namespace:DrobnyZivnostnik.Models.MasterPage;assembly=DrobnyZivnostnik"
             xmlns:travelOrde="clr-namespace:DrobnyZivnostnik.Views.TravelOrder;assembly=DrobnyZivnostnik"
             xmlns:user="clr-namespace:DrobnyZivnostnik.Views.User;assembly=DrobnyZivnostnik"
             xmlns:viewModels="clr-namespace:DrobnyZivnostnik.ViewModels;assembly=DrobnyZivnostnik"
             Title="Master">

  <ContentPage.BindingContext>
    <viewModels:MasterViewModel />
  </ContentPage.BindingContext>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="20*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <StackLayout Grid.Row="1" BackgroundColor="WhiteSmoke">

      <ListView x:Name="MasterListView"
                RowHeight="100"
                SeparatorVisibility="Default">
        <ListView.ItemsSource>
          <x:Array Type="{x:Type masterPage:MasterPageItem}">
            <masterPage:MasterPageItem Title="Axios.Views.MainPage.Menu.Items.Invoice"
                                       IconSource="Invoice.png"
                                       TargetType="{x:Type user:UserDetailView}" />
            <masterPage:MasterPageItem Title="Axios.Views.MainPage.Menu.Items.TravelOrder"
                                       IconSource="TravelOrder.png"
                                       TargetType="{x:Type travelOrde:TravelOrderDetailView}" />
            <masterPage:MasterPageItem Title="Axios.Views.MainPage.Menu.Items.Users"
                                       IconSource="Users.png"
                                       TargetType="{x:Type user:UserDetailView}" />
          </x:Array>
        </ListView.ItemsSource>
        <ListView.Behaviors>
          <behaviors:EventHandlerBehavior EventName="ItemSelected">
            <behaviors:ActionCollection>
              <behaviors:InvokeCommandAction Command="{Binding OnItemSelectCommand}" CommandParameter="{Binding SelectedItem, Source={x:Reference MasterListView}}" />
            </behaviors:ActionCollection>
          </behaviors:EventHandlerBehavior>

        </ListView.Behaviors>
        <ListView.ItemTemplate>
          <DataTemplate>
            <ViewCell>
              <StackLayout Padding="10">
                <StackLayout Padding="10">
                  <Grid>
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="1*" />
                      <ColumnDefinition Width="4*" />
                    </Grid.ColumnDefinitions>

                    <StackLayout Grid.Column="0">
                      <Image HorizontalOptions="FillAndExpand"
                             Source="{Binding IconSource}"
                             VerticalOptions="FillAndExpand" />
                    </StackLayout>

                    <localizedControls:AxiosLocalizedLabel Grid.Column="1"
                                                           HorizontalOptions="CenterAndExpand"
                                                           HorizontalTextAlignment="Center"
                                                           LabelTextKey="{Binding Title}"
                                                           Style="{StaticResource Key=HeaderTextStyle}"
                                                           VerticalOptions="CenterAndExpand"
                                                           VerticalTextAlignment="Center" />
                  </Grid>
                </StackLayout>
              </StackLayout>
            </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </StackLayout>

  </Grid>

</ContentPage>